<html>
<head>
  <title>test html</title>
  <meta charset="UTF-8" />
  <title>Hello React</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.3/react-dom.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>

<body>
  <h2>test</h2>

  <div>
    <div>
      <!-- image button -->
      <button id="img" type="button" class="btn btn-default">image</button>
    </div>
    <div>
      <!-- movie botton -->
      <button id="movie" type="button" class="btn btn-default">movie</button>
    </div>
    <div>
      <!-- nothing button -->
      <button id="nothing"type="button" class="btn btn-default">nothing</button>
    </div>
  </div>

  <div id="content">
    <div className="nothingTag">
      nothing
    </div>
  </div>
  <script type="text/babel">

  $('#img').on('click', function(){
    // console.log('img clicked');
    ReactDOM.render(
      <ImgTag />,
      document.getElementById('content')
    );
  });

  $('#movie').on('click', function(){
    // console.log('movie clicked');
    ReactDOM.render(
      <MovieTag />,
      document.getElementById('content')
    );
  });

  $('#nothing').on('click', function(){
    // console.log('movie clicked');
    ReactDOM.render(
      <NothingTag />,
      document.getElementById('content')
    );
  });

  // ここにコードが入ります
  var ImgTag = React.createClass({
    render: function() {
      return (
        <div className="imgTag">
          <img src={'http://freighter.flyteam.jp/newsphoto/5020/w200.jpg'} alt="testReact" />
        </div>
      );
    }
  });

  var MovieTag = React.createClass({
    render: function() {
      return (
        <div className="movieTag">
          <iframe width="560" height="315" src={'https://www.youtube.com/embed/W8g_0jT5cr4'} frameBorder="0" allowFullScreen></iframe>
        </div>
      );
    }
  });

  var NothingTag = React.createClass({
    render: function() {
      return (
        <div className="nothingTag">
          nothing
        </div>
      );
    }
  });

  </script>

</body>

</html>
